<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/showcar_layout">

        <CheckBox
            android:id="@+id/check_change"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@null"
            android:layout_marginRight="14dp"
            android:background="@drawable/check_select"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/cart_img"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/cart_img"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/check_change"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
        <TextView
            android:id="@+id/item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/cart_img"
            app:layout_constraintRight_toRightOf="parent"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#f00"
            app:layout_constraintLeft_toRightOf="@id/cart_img"
            app:layout_constraintBottom_toBottomOf="@id/cart_img"/>
        <TextView
            android:id="@+id/add"
            android:layout_width="20dp"
            android:layout_height="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/cart_img"
            android:text="+"
            android:gravity="center"/>
        <TextView
            android:id="@+id/item_count"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="#1e1e1e"
            app:layout_constraintRight_toLeftOf="@id/add"
            app:layout_constraintBottom_toBottomOf="@id/cart_img"
            android:gravity="center"/>
        <TextView
            android:id="@+id/jian"
            android:layout_width="20dp"
            android:layout_height="30dp"
            app:layout_constraintRight_toLeftOf="@id/item_count"
            app:layout_constraintBottom_toBottomOf="@id/cart_img"
            android:text="-"
            android:gravity="center"
            android:layout_marginRight="5dp"/>

    </android.support.constraint.ConstraintLayout>
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="#ff5e70"
        android:text="删除"
        android:textColor="@android:color/white"/>
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>