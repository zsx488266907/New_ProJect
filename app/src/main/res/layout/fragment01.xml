<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2eded"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
  <LinearLayout
      android:id="@+id/layout"
      android:visibility="visible"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

  <LinearLayout
      android:id="@+id/layoutsou"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
       android:layout_alignParentTop="true"
      >

    <ImageView
        android:layout_marginTop="36dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/btn_menu_xxhdpi"
        android:layout_width="24dp"
        android:layout_height="24dp" />



    <ImageView
        android:id="@+id/fangda"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="480dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/btn_search_xxhdpi"
        android:layout_width="24dp"
        android:layout_height="24dp" />
  </LinearLayout>
  <LinearLayout
      android:id="@+id/layoutsout"
      android:visibility="gone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_alignParentTop="true"
      >

    <ImageView
        android:layout_marginTop="36dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/btn_menu_xxhdpi"
        android:layout_width="24dp"
        android:layout_height="24dp" />

    <EditText
        android:id="@+id/edit1"
        android:layout_marginTop="36dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="35dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/shape_search"
        />

    <TextView
        android:id="@+id/text1"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="搜索"
        android:layout_width="50dp"
        android:layout_height="24dp" />
  </LinearLayout>
</RelativeLayout>
<RelativeLayout
    android:id="@+id/layout5"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="30dp"
    >
  <com.recker.flybanner.FlyBanner
      android:id="@+id/fly_banner"
      android:layout_width="match_parent"
      android:layout_height="match_parent"></com.recker.flybanner.FlyBanner>
</RelativeLayout>
  <RelativeLayout
      android:id="@+id/layout6"

      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginBottom="30dp"
      >
    <com.jcodecraeer.xrecyclerview.XRecyclerView
      android:id="@+id/xrv"
      android:layout_width="match_parent"
      android:layout_height="match_parent"

      />

  </RelativeLayout>


</LinearLayout>
<LinearLayout
    android:id="@+id/layout2"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="500dp">
  <com.jcodecraeer.xrecyclerview.XRecyclerView
      android:id="@+id/onerv"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

</LinearLayout>
      <LinearLayout
          android:id="@+id/layout7"
          android:visibility="gone"
          android:layout_width="match_parent"
          android:layout_height="500dp">
        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/tworv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

      </LinearLayout>
    </LinearLayout>
    </LinearLayout>
